<h1>Listing slides</h1>

<table>
  <tr>
    <th>kind</th>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Image url</th>
    <th>Command options</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slides.each do |slide| %>
  <tr>
    <td><%= sign_for_slide_kind( slide ) %></td>
    <td><%= slide.user.name %></td>
    <td><%= slide.title %></td>
    <td><%= slide.description %></td>
    <td><%= slide.image_url %></td>
    <td><%= link_to 'Show', slide %></td>
    <td><%= link_to 'Edit', edit_slide_path(slide) %></td>
    <td><%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

