<div class="page-content">
  <h1>Listing slides</h1>
  <ul class="listview fluid">
  <% @slides.each do |slide| %>
    <div class="image-container light">
      <%= image_tag 'http://wakamsha.github.io/greenmind/img/img3.jpg' %>
      <div class="overlay">
        <% if sign_for_slide_kind( slide ) == "markdown" then %>
          <div class="slide-item-row"><i class="icon-github"></i></div>
        <% else %>
          <div class="slide-item-row"><i class="icon-github"></i></div>
        <% end %>
        <div class="slide-item-row">use:<%= slide.user.name %></div>
        <div class="slide-item-row"><%= link_to slide.title, slide %></div>
      </div>
    </div>
